{
  "name": "n8n-mcp",
  "version": "2.0.0",
  "description": "MCP server for n8n API with comprehensive workflow, credential, and node management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "n8n-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "MCP_TRANSPORT=http node dist/index.js",
    "start:stdio": "MCP_TRANSPORT=stdio node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "n8n",
    "automation",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "axios": "^1.13.4",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "typescript": "^5.8.0"
  }
}
